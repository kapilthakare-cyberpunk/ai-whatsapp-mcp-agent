# ============================================
# AI WhatsApp Agent - Enhanced Configuration
# ============================================

# ==========================================
# AI API KEYS (Priority Order)
# ==========================================

# Primary: Groq API - Fast, reliable, cost-effective
# Get your key from: https://console.groq.com
GROQ_API_KEY=your_groq_api_key_here

# Secondary: Gemini API - High quality, creative
# Get your key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Local Fallback: Ollama - Always available, no cost
# Run: bash scripts/setup-ollama.sh to install
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_PRIMARY_MODEL=mistral
OLLAMA_FALLBACK_MODEL=llama3.2

# ==========================================
# RATE LIMITING & CACHING
# ==========================================

# Rate Limiting (requests per minute)
RATE_LIMIT_PER_USER=30
RATE_LIMIT_PER_IP=100
RATE_LIMIT_GLOBAL=1000
RATE_LIMIT_WINDOW=60000

# Response Caching
ENABLE_CACHE=true
CACHE_TYPE=memory
CACHE_DEFAULT_TTL=3600
CACHE_MAX_KEYS=500

# ==========================================
# BUSINESS CONTEXT
# ==========================================

# Your business information (injected into AI responses)
BUSINESS_NAME="Primes and Zooms Photo and Cine Gear Rentals"
BUSINESS_LOCATION="Pune"
BUSINESS_FOCUS="photo,cine,gear,rentals,events,collaborations"

# ==========================================
# TASK MANAGEMENT
# ==========================================

# Todoist Integration (optional)
# Get your API key from: https://todoist.com/prefs/integrations
TODOIST_API_KEY=your_todoist_api_key_here

# ==========================================
# SERVER CONFIGURATION
# ==========================================

PORT=3000

# WhatsApp Configuration (for compatibility)
WHATSAPP_VERIFY_TOKEN=whatsapp_verify_token
WHATSAPP_WEBHOOK_SECRET=your_webhook_secret_here

# MCP Broker (optional)
MCP_BROKER_URL=http://localhost:8080
MCP_TOPIC=whatsapp_messages

# ==========================================
# CIRCUIT BREAKER SETTINGS
# ==========================================

# Circuit breaker thresholds (number of failures before opening)
CIRCUIT_BREAKER_THRESHOLD_GROQ=3
CIRCUIT_BREAKER_THRESHOLD_GEMINI=3
CIRCUIT_BREAKER_THRESHOLD_OLLAMA=5

# Circuit breaker reset timeout (milliseconds)
CIRCUIT_BREAKER_RESET_TIMEOUT=30000

# ==========================================
# MONITORING & LOGGING
# ==========================================

# Enable detailed logging
DEBUG_MODE=false
LOG_LEVEL=info

# ==========================================
# OPTIONAL: Third-party API
# ==========================================

# Mixtral API (via Together.xyz) - Advanced model
MIXTRAL_API_KEY=your_mixtral_api_key_here

# ==========================================
# FEATURE FLAGS
# ==========================================

# Enable/disable features
ENABLE_AUTO_TASK_DETECTION=true
ENABLE_AI_BRIEFING=true
ENABLE_TEMPLATE_SUGGESTIONS=true
ENABLE_BUSINESS_INTELLIGENCE=true
