# WhatsApp Business Account Configuration (Legacy/Official API)
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token_here
WHATSAPP_PHONE_NUMBER_ID=your_whatsapp_phone_number_id_here
WHATSAPP_VERIFY_TOKEN=whatsapp_verify_token
WHATSAPP_WEBHOOK_SECRET=your_webhook_secret_here

# AI Configuration
# Primary: Gemini API - Get your key from https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Secondary: Groq API - Get your key from https://console.groq.com
GROQ_API_KEY=your_groq_api_key_here

# Optional: Mixtral API (via Together.xyz) - Get your key from https://api.together.xyz
MIXTRAL_API_KEY=your_mixtral_api_key_here

# Local Fallback: Ollama (no API key needed - runs locally)
# Make sure Ollama is installed and running: ollama serve
# Install a model: ollama pull llama3.2
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2
# Other good models: mistral, phi, gemma2, qwen2.5

# Task Management: Todoist Integration
# Get your API key from: https://todoist.com/prefs/integrations
# Click on "Developer" tab -> "API token"
TODOIST_API_KEY=your_todoist_api_key_here

# Telegram (Telethon user client)
TELEGRAM_API_ID=your_telegram_api_id_here
TELEGRAM_API_HASH=your_telegram_api_hash_here
TELEGRAM_PHONE=your_phone_number_here
TELEGRAM_SERVICE_URL=http://localhost:8088

# Backfill
AUTO_BACKFILL_ON_STARTUP=true

# Server Configuration
PORT=3000

# MCP Broker Configuration (optional)
MCP_BROKER_URL=http://localhost:8080
MCP_TOPIC=whatsapp_messages
